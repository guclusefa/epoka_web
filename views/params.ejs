<%- include('layout/header') %>

    <div class="jumbotron jumbotron-fluid mb-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="h1 mb-4">Modifier les paramètres</p>
                    <hr>
                    <form class="mt-3" action="/form_params" method="POST">
                        <!-- Nom et prénom -->
                        <div class="row">
                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="taux">Taux au km</label>
                                    <input type="text" class="form-control" id="taux" name="taux" placeholder="Taux au km" value="<%= data.taux %>" required></input>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="indemnite">Indemnité journalière</label>
                                    <input type="text" class="form-control" id="indemnite" name="indemnite" placeholder="Indemnité journalière" value="<%= data.indemnite %>" required></input>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn-block btn btn-primary btn-lg">Modifier</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>