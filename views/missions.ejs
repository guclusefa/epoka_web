<%- include('layout/header') %>

    <div class="jumbotron jumbotron-fluid mb-0">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="h1">Ajouter une mission</p>
                    <form class="mt-3" action="/form_missions" method="POST">
                        <!-- Nom et prénom -->
                        <div class="row">
                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="salarie">Salarié</label>
                                    <select class="custom-select d-block form-control" id="salarie" name="salarie"
                                        required>
                                        <option value="" disabled selected>Choisir un salarié</option>
                                        <option>
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="commune">Commune</label>
                                    <select class="custom-select d-block form-control" id="commune" name="commune"
                                        required>
                                        <option value="" disabled selected>Choisir une commune</option>
                                        <option>
                                        </option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Sexe et date de naissance -->
                        <div class="row">
                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="debut">Date de début</label>
                                    <input type="date" class="form-control" id="debut" name="debut" required>
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6 col-12">
                                <div class="form-group">
                                    <label class="text-inverse" for="fin">Date de fin</label>
                                    <input type="date" class="form-control" id="fin" name="fin" required>
                                </div>
                            </div>
                        </div>

                        <!-- Mutuelle -->
                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-12">
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" id="description" name="description" rows="3"
                                        placeholder="Description..."></textarea>
                                </div>
                            </div>
                        </div>


                        <div class="mt-4">
                            <button type="submit" class="btn-block btn btn-primary btn-lg">Ajouter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


